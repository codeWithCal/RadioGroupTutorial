<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/favourite_genre"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radio_group_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="10dp">

        <RadioButton
            android:background="@drawable/radio_off"
            android:id="@+id/metal"
            android:text="@string/metal"
            style="@style/radioButtonStyle" />

        <RadioButton
            android:background="@drawable/radio_on"
            android:id="@+id/classical"
            android:text="@string/classical"
            style="@style/radioButtonStyle" />

        <RadioButton
            android:background="@drawable/radio_off"
            android:id="@+id/pop"
            android:text="@string/pop"
            style="@style/radioButtonStyle" />

        <RadioButton
            android:background="@drawable/radio_off"
            android:id="@+id/jazz"
            android:text="@string/jazz"
            style="@style/radioButtonStyle" />


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>